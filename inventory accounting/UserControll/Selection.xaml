<UserControl x:Class="inventory_accounting.Selection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:inventory_accounting"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition  Height="5*" />
        </Grid.RowDefinitions>
        <local:Table Grid.Row="0" x:Name="find_selection" Margin="156,0,0,0"  VerticalAlignment="Stretch" ></local:Table>
        <local:Table Grid.Row="1" FontSize="14" x:Name="selection" Margin="0,0,163,0" VerticalAlignment="Stretch" ></local:Table>
    </Grid>
</UserControl>
