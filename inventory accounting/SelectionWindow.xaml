<Window x:Class="inventory_accounting.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inventory_accounting"
        mc:Ignorable="d"
        Title="Подбор" Height="730" Width="1000">
    <Grid>
        <Button Content="Записать" HorizontalAlignment="Right" Margin="0,0,20,180" VerticalAlignment="Bottom" Width="143" Height="76" Click="Button_Click" FontSize="18"/>
        <TextBlock x:Name="Summ_TextBox"   HorizontalAlignment="Right" Height="63" Margin="0,0,20,56" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="143" FontSize="18"/>
        <TextBlock x:Name="Summ_TextBox_Copy" Text="Сумма:"  HorizontalAlignment="Right" Height="27" Margin="0,0,20,124" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="143" FontSize="18"/>
        <local:Selection x:Name="Selection" Margin="0,0,0,10"/>
    </Grid>
</Window>
