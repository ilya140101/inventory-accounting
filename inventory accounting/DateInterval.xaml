<Window x:Class="inventory_accounting.DateInterval"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inventory_accounting"
        mc:Ignorable="d" FontSize="18"
        
        Title="Выберите интервал" Height="250" Width="450" ResizeMode="NoResize"  WindowStartupLocation="CenterOwner">
    <GroupBox Header="Период" BorderBrush="LightGray" BorderThickness="3"  Margin="10,10,10,10">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="32"  VerticalAlignment="Center"  >
            <TextBlock TextWrapping="Wrap" Text="С  " Margin="0,4,0,0"/>
            <DatePicker x:Name="LeftDate" />
            <TextBlock TextWrapping="Wrap" Text=" По " Margin="0,4,0,0"/>
            <DatePicker x:Name="RightDate"/>

        </StackPanel>
        <Button  x:Name="OkButton" Content="Ок" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="76" Click="OkButton_Click" Margin="201,0,0,10" />
        <Button x:Name="CancelButton" Content="Отмена" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="76" Click="CancelButton_Click" Margin="288,0,0,10" RenderTransformOrigin="-0.373,0.345"/>

    </Grid>
    </GroupBox>
</Window>
